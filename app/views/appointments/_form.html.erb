Customer: <%= @customer.name %>
<br>
Vehicle: <%= @vehicle.vehicle_description %>
<br>

<%= form_for [@customer, @vehicle, @appointment] do |f| %>

  <%= f.label :scheduled_for %>:
  <%= f.date_field :scheduled_for, min: Date.today %><br />

  <%= f.label :status %>:
  <%#= f.text_field :status %>

  <%= f.select(:status, [["Open", "open"], ["Closed", "closed"], ["Pending", "pending"]])%>
<br />
  <%= f.submit %>
<% end %>
